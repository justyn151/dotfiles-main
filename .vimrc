let mapleader=","

syntax on
filetype plugin indent on
set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set smartindent
set number
set relativenumber
set backspace=indent,eol,start
set guioptions-=m
set guioptions-=T
set smartcase
set cursorline
set showmode
set nobackup
set history=1000
set hlsearch
set nowrap

set wildmenu
set wildmode=list:longest

